{
  "name": "near-earth-asteroids",
  "version": "1.0.0",
  "description": "Dashboard to query near earth asteroids from NASA's API",
  "main": "api/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tribou/near-earth-asteroids.git"
  },
  "scripts": {
    "build": "webpack -p --progress --config build/webpack.config.js",
    "debug": "node debug api/server.js",
    "dev": "webpack --progress --colors --watch --config build/webpack.config.js & npm start",
    "lint": "eslint --ignore-pattern **/bundle-*.js --ext .js,.jsx web/** api/**",
    "start": "node api/server.js",
    "test": "lab -v -P '_test' -T node_modules/lab-babel -t 90 api web",
    "test-cov-html": "npm test -- -r html -o coverage.html -r console -o stdout",
    "watch": "nodemon -w web/ -w api/ -e js,jsx",
    "watch-test": "npm run watch -- -x npm test",
    "watch-test-cov": "npm run watch -- -x npm run test-cov-html"
  },
  "author": "tribou",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^5.8.33",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.3",
    "browser-sync": "^2.9.11",
    "browser-sync-webpack-plugin": "^1.0.0",
    "code": "^1.5.0",
    "css-loader": "^0.21.0",
    "eslint": "^1.7.3",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-loader": "^1.1.0",
    "eslint-plugin-react": "^3.6.3",
    "file-loader": "^0.8.4",
    "lab": "^7.0.0",
    "lab-babel": "^1.1.0",
    "node-sass": "^3.4.1",
    "sass-loader": "^3.1.1",
    "sinon": "^1.17.2",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2"
  },
  "dependencies": {
    "babel": "^5.8.29",
    "flux": "^2.1.1",
    "good": "^6.4.0",
    "good-console": "^5.1.0",
    "hapi": "^11.0.2",
    "hapi-react-views": "^4.0.0",
    "inert": "^3.2.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "superagent": "^1.4.0",
    "vision": "^3.0.0"
  }
}
